# Configuración del servidor
PORT=5000
NODE_ENV=development

# MongoDB Atlas URI
# Formato: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://tu_usuario:tu_password@cluster.mongodb.net/tu_base_de_datos?retryWrites=true&w=majority

# JWT Secret (genera una clave aleatoria segura)
JWT_SECRET=genera_una_clave_secreta_aleatoria_aqui

# JWT Expiration (en segundos o formato string: '1h', '7d', etc.)
JWT_EXPIRES_IN=86400

# Configuración de Email (para recuperación de contraseña)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_password_de_aplicacion
EMAIL_FROM=noreply@denuncias.com

# URL del frontend (para links en correos)
FRONTEND_URL=http://localhost:5173

# Configuración de archivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Google OAuth 2.0
# Obtén tus credenciales en: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=tu_google_client_id_aqui.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu_google_client_secret_aqui
