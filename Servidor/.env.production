# Configuración del servidor - PRODUCCIÓN
# INSTRUCCIONES: Copiar este archivo a .env y actualizar con valores reales

PORT=5000
NODE_ENV=production

# MongoDB Atlas URI
# Obtener de: https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret - Generar con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERAR_CLAVE_ALEATORIA_SEGURA_AQUI
JWT_EXPIRES_IN=86400

# Configuración de Email (Gmail)
# App Password: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_app_password_de_gmail
EMAIL_FROM=noreply@denuncias.com

# URL del frontend - PRODUCCIÓN
FRONTEND_URL=https://plataformadenuncias.myvnc.com

# Configuración de archivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Google OAuth 2.0
# Obtener de: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=tu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=tu_google_client_secret_aqui

# CORS Origins permitidos (separados por coma)
CORS_ORIGINS=https://plataformadenuncias.myvnc.com,http://plataformadenuncias.myvnc.com
